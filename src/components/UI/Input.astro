---
const {
  inputName,
  defaultTextContent,
  height,
  placeholder,
  className,
  defaultStyles = true,
  autocomplete = "on",
} = Astro.props;

const styleList = className ? className.split(" ") : [];

if (defaultStyles) {
  styleList.push("astro-input");
}

interface Props {
  inputName: string;
  defaultTextContent?: string;
  height: string;
  placeholder?: string;
  className?: string;
  defaultStyles?: boolean;
  autocomplete?: string;
}
---

<input
  style={`height: ${height}`}
  id={inputName + "-input"}
  placeholder={placeholder || ""}
  value={defaultTextContent || ""}
  type="text"
  class={styleList.map((style) => style).join(" ")}
  autocomplete={autocomplete}
/>
